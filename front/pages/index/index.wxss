.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.game-switcher {
  display: flex;
  justify-content: center;
  margin-bottom: 40rpx;
}

.game-btn {
  padding: 20rpx 40rpx;
  margin: 0 10rpx;
  border: 2rpx solid #ddd;
  background-color: #fff;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.game-btn.active {
  background-color: #007aff;
  color: #fff;
  border-color: #007aff;
}

.number-display {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  text-align: center;
}

.number-group {
  display: flex;
  justify-content: center;
  margin-bottom: 20rpx;
}

.number {
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 50%;
  margin: 0 10rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: #fff;
}

.number.red {
  background-color: #ff4757;
}

.number.blue {
  background-color: #3742fa;
}

.generate-btn {
  width: 100%;
  padding: 30rpx;
  background-color: #007aff;
  color: #fff;
  border: none;
  border-radius: 10rpx;
  font-size: 32rpx;
  font-weight: bold;
}
