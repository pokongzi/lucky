.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

/* 顶部导航栏样式 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}





/* 游戏切换器样式 */
.game-switcher {
  display: flex;
  justify-content: center;
  margin: 20rpx 0;
  background: #fff;
  border-radius: 50rpx;
  padding: 5rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.game-btn {
  flex: 1;
  padding: 20rpx 0;
  margin: 0 5rpx;
  border: none;
  background: #f8f9fa;
  border-radius: 50rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s;
}

.game-btn.active {
  background: linear-gradient(135deg, #007bff, #0056b3);
  color: #fff;
  box-shadow: 0 4rpx 10rpx rgba(0, 123, 255, 0.3);
}

/* 号码列表样式 */
.numbers-list {
  margin-bottom: 30rpx;
}

.number-item {
  display: flex;
  padding: 30rpx;
  background: #fff;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.08);
  justify-content: space-between;
  align-items: center;
  transition: all 0.3s;
  position: relative;
  overflow: hidden;
}

.number-item:last-child {
  margin-bottom: 0;
}

.number-item.manage-mode {
  background: #f8f9fa;
  border: 2rpx dashed #007bff;
}

.number-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0));
  z-index: 0;
}

.number-info {
  flex: 1;
  position: relative;
  z-index: 1;
}

.numbers {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  margin-bottom: 15rpx;
}

.number {
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 50%;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  font-size: 22rpx;
  font-weight: bold;
  color: #fff;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
  transition: all 0.3s;
}

.number.red {
  background: linear-gradient(135deg, #ff4757, #ff6b81);
  border: 2rpx solid #ff2e43;
}

.number.blue {
  background: linear-gradient(135deg, #3742fa, #5352ed);
  border: 2rpx solid #2e38d9;
}

.number:hover {
  transform: scale(1.1);
}

.meta-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.nickname {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

.create-time {
  font-size: 22rpx;
  color: #999;
  margin-top: 5rpx;
}

/* 操作按钮样式 */
.actions {
  display: flex;
  gap: 15rpx;
  flex-direction: column;
}

.action-btn {
  padding: 12rpx 25rpx;
  border-radius: 50rpx;
  font-size: 22rpx;
  border: none;
  transition: all 0.3s;
  min-width: 120rpx;
  text-align: center;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.history-btn {
  background: linear-gradient(135deg, #007bff, #0056b3);
  color: #fff;
}

.history-btn:active {
  background: linear-gradient(135deg, #0056b3, #004085);
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 5rpx rgba(0, 123, 255, 0.2);
}

.delete-btn {
  background: linear-gradient(135deg, #ff4757, #c4451c);
  color: #fff;
}

.delete-btn:active {
  background: linear-gradient(135deg, #c4451c, #a03816);
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 5rpx rgba(255, 71, 87, 0.2);
}



/* 空状态样式 */
.empty-state {
  text-align: center;
  padding: 150rpx 50rpx;
  background: linear-gradient(135deg, #f8f9fa, #fff);
  border-radius: 20rpx;
  margin: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.empty-icon {
  font-size: 150rpx;
  color: #adb5bd;
  margin-bottom: 30rpx;
  text-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.empty-text {
  font-size: 32rpx;
  color: #6c757d;
  margin-bottom: 40rpx;
  line-height: 1.6;
}

.goto-generate-btn {
  margin-top: 30rpx;
  padding: 25rpx 60rpx;
  background: linear-gradient(135deg, #007bff, #0056b3);
  color: #fff;
  border-radius: 50rpx;
  font-size: 28rpx;
  border: none;
  transition: all 0.3s;
  box-shadow: 0 6rpx 15rpx rgba(0, 123, 255, 0.3);
  font-weight: 500;
  position: relative;
  overflow: hidden;
}

.goto-generate-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: 0.5s;
}

.goto-generate-btn:hover::before {
  left: 100%;
}

.goto-generate-btn:active {
  background: linear-gradient(135deg, #0056b3, #004085);
  transform: translateY(4rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 123, 255, 0.2);
}

/* 加载动画 */
.loading {
  text-align: center;
  padding: 100rpx 0;
  background: linear-gradient(135deg, #f8f9fa, #fff);
  border-radius: 20rpx;
  margin: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.spinner {
  width: 100rpx;
  height: 100rpx;
  border: 10rpx solid #e9ecef;
  border-top: 10rpx solid #007bff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 40rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
}

@keyframes spin {
  0% { 
    transform: rotate(0deg);
  }
  100% { 
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 30rpx;
  color: #495057;
  animation: pulse 1.5s infinite;
  font-weight: 500;
}

/* 中奖结果弹窗样式 */
.winning-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  animation: fadeIn 0.3s ease;
}

.modal-content {
  position: relative;
  width: 90%;
  max-width: 650rpx;
  max-height: 80vh;
  background: #fff;
  border-radius: 30rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
  animation: slideUp 0.3s ease;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.modal-title {
  font-size: 34rpx;
  font-weight: bold;
}

.close-btn {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #fff;
  opacity: 0.8;
  transition: all 0.3s;
}

.close-btn:active {
  opacity: 1;
  transform: scale(0.9);
}

.modal-body {
  flex: 1;
  overflow-y: auto;
  padding: 30rpx 40rpx;
}

/* 未中奖样式 */
.no-winning {
  text-align: center;
  padding: 60rpx 40rpx;
}

.no-winning-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.no-winning-text {
  display: block;
  font-size: 32rpx;
  color: #666;
  margin-bottom: 20rpx;
  line-height: 1.6;
}

.no-winning-tip {
  display: block;
  font-size: 26rpx;
  color: #999;
}

/* 有中奖样式 */
.summary-card {
  display: flex;
  background: linear-gradient(135deg, #ffd89b 0%, #19547b 100%);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 20rpx rgba(255, 107, 107, 0.2);
}

.summary-item {
  flex: 1;
  text-align: center;
}

.summary-label {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 10rpx;
}

.summary-value {
  display: block;
  font-size: 42rpx;
  font-weight: bold;
  color: #fff;
}

.summary-value.highlight {
  color: #fff;
  text-shadow: 0 2rpx 10rpx rgba(255, 107, 107, 0.5);
}

.summary-value.prize {
  color: #fff;
  text-shadow: 0 2rpx 10rpx rgba(255, 193, 7, 0.5);
}

.summary-divider {
  width: 2rpx;
  background: rgba(255, 255, 255, 0.3);
  margin: 0 20rpx;
}

.details-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  border-left: 6rpx solid #667eea;
}

.details-list {
  max-height: 600rpx;
}

.detail-card {
  background: #f8f9fa;
  border-radius: 15rpx;
  padding: 25rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.08);
  border-left: 6rpx solid #667eea;
}

.detail-card:last-child {
  margin-bottom: 0;
}

.detail-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx dashed #e0e0e0;
}

.period-info {
  display: flex;
  flex-direction: column;
}

.period-label {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

.date-label {
  font-size: 22rpx;
  color: #999;
}

.win-level {
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  font-size: 22rpx;
  font-weight: bold;
  color: #fff;
}

.win-level.level-1 {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.win-level.level-2 {
  background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
}

.win-level.level-3 {
  background: linear-gradient(135deg, #30cfd0 0%, #330867 100%);
}

.win-level.level-4 {
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
}

.win-level.level-5 {
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
}

.win-level.level-6 {
  background: linear-gradient(135deg, #e0c3fc 0%, #8ec5fc 100%);
}

.detail-body {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.match-info {
  display: flex;
  gap: 25rpx;
}

.match-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.match-label {
  font-size: 24rpx;
  color: #666;
}

.match-count {
  font-size: 28rpx;
  font-weight: bold;
}

.match-count.red {
  color: #ff4757;
}

.match-count.blue {
  color: #3742fa;
}

.prize-info {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
}

.prize-label {
  font-size: 22rpx;
  color: #d35400;
}

.prize-amount {
  font-size: 26rpx;
  font-weight: bold;
  color: #c0392b;
}

.modal-footer {
  padding: 20rpx 40rpx 30rpx;
  background: #fff;
  border-top: 2rpx solid #f0f0f0;
}

.confirm-btn {
  width: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 50rpx;
  padding: 25rpx 0;
  font-size: 30rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s;
}

.confirm-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 10rpx rgba(102, 126, 234, 0.2);
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideUp {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}